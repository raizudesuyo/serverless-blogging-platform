{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
       // default asp.net launch and debug config
         {
              "name": "ASP.NET Core Launch (web-linux)",
              "type": "coreclr",
              "request": "launch",
            //   "": "dotnet build --project \"./src/serverless-blogging-platform\"",
              // If you have changed target frameworks, make sure to update the program path.
              "program": "${workspaceFolder}/src/serverless-blogging-platform/bin/Debug/net7.0/linux-x64/serverless-blogging-platform",
              "args": [],
              "cwd": "${workspaceFolder}",
              "stopAtEntry": false,
              // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
              "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
              },
              "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
              },
              "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
              }
         }, 
    ]
}